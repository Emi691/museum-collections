    <%= f.label 'title:' %>
    <%= f.text_field 'title' %><br>
    <%= f.label 'artist:' %>
    <%= f.text_field 'artist' %><br>
    <%= f.label 'description:' %><br>
    <%= f.text_area 'description' %><br>
    <%= f.label 'medium:' %>
    <%= f.text_field 'medium' %><br>
    <%= f.label 'dimensions:' %>
    <%= f.text_field 'dimensions' %><br>
    <%= f.label 'weight:' %>
    <%= f.text_field 'weight' %><br>
